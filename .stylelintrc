{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-css-modules"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "selector-max-specificity": "1,2,0",
    "order/order": [
      "custom-properties",
      "declarations",
      "rules"
    ],
    "order/properties-order": [
      "width",
      "height"
    ],
    "order/properties-alphabetical-order": true
  }
}
